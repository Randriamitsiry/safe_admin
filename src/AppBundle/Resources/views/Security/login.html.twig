{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}
{% block fos_user_content %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="{{ asset('assets/images/img-01.png') }}" alt="IMG">
                </div>

                <form class="login100-form validate-form" action="{{ path('login_check') }}" id="frm" method="POST">

                    <span class="login100-form-title">
						Se connecter
					</span>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endif %}
                    <div class="wrap-input100 validate-input" data-validate = "Email requis: ex@abc.xyz">
                        <input class="input100" type="text" name="_username" placeholder="Login" value="{{ last_username }}" id="username" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Mot de passe oublié?">
                        <input class="input100" type="password" name="_password" placeholder="Mot de passe" id="password" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" id="btn_conn">
                            Connexion
                        </button>
                    </div>

                    <div class="text-center p-t-12">
						<span class="txt1">

						</span>
                        <a class="txt2" href="#">
                            Mot de passe oublié?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {

        });
    </script>
{% endblock %}
